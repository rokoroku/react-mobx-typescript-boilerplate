{
  "name": "typescript-react-mobx-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "A frontend boilerplate with React, MobX and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "start-server-and-test start:dev http://localhost:3000 start:test",
    "start:dev": "react-scripts start",
    "start:test": "cypress open",
    "unit": "jest --watch",
    "test": "start-server-and-test start:dev http://localhost:3000 test:cy",
    "test:cy": "cypress run --record",
    "test:unit": "react-scripts test",
    "build": "react-scripts build",
    "run:prettier": "prettier --write \"**/*.{ts,tsx,css,js,scss,html,yml,md,json}\""
  },
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/history": "^4.7.2",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.7",
    "@types/react": "16.8.14",
    "@types/react-dom": "16.8.4",
    "classnames": "^2.2.6",
    "cypress": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mobx-react-devtools": "^6.1.1",
    "prettier": "^1.17.0",
    "start-server-and-test": "^1.7.13",
    "ts-jest": "^24.0.2",
    "typescript": "3.4.4"
  },
  "dependencies": {
    "@types/react-router-dom": "^4.3.2",
    "history": "^4.9.0",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.3",
    "mobx-react-router": "^4.0.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,js,scss,html,yml,md,json}": [
      "yarn run run:prettier",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
